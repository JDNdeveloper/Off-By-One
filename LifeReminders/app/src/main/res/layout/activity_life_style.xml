<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">










    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lifestyleName"
        android:text="Lifestyle"
        android:textSize="32dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/lifestyleEnabled"
        android:layout_toStartOf="@+id/lifestyleEnabled" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lifestyleListView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/lifestyleName" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="@android:color/darker_gray"
        android:layout_below="@+id/lifestyleEnabled"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:thumb="@drawable/switch_thumb"
        android:track="@drawable/switch_track"
        android:textOn="@string/switch_on"
        android:textOff="@string/switch_off"
        android:switchTextAppearance="@style/SwitchStyle"
        android:switchMinWidth="@dimen/switchTrackWidth"
        android:thumbTextPadding="@dimen/switchThumbWidth"
        android:showText="true"
        android:focusable="false"
        android:id="@+id/lifestyleEnabled"
        android:layout_alignBottom="@+id/lifestyleName"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageplusbutton"
        android:layout_gravity="center_horizontal|bottom"
        android:clickable="true"
        android:src="@drawable/plus_selector"
        android:background="@android:color/transparent"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>


